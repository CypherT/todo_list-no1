{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts", // ‚Üê Specific cho NestJS e2e tests
    "**/*.js",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist"]
}
